@model project_for_space_app.Models.User

<h2>Добавление пользователя</h2>
<form asp-action="CreateUser" asp-controller="home">
    <p>
        <label asp-for="FullName">Имя</label><br />
        <input type="text" asp-for="FullName" />
        <span asp-validation-for="FullName" />
    </p>
    <p>
        <label asp-for="BornDate">Дата рождения</label><br />
        <input type="date" asp-for="BornDate" /> 
    </p>
    <p>
        <input type="submit" value="Добавить" />
    </p>
</form>



<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>