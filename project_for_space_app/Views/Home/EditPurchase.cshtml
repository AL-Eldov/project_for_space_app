@model project_for_space_app.Models.Purchase

<h2>Редактирование заказа</h2>
<form asp-action="EditPurchase" asp-controller="home">
    <p>
        <label asp-for="userId">Пользователь</label><br />
        <select asp-for="userId">
            @foreach (var item in ViewBag.userIds)
            {
                <option value=@item>@item</option>
            }
        </select>
        <span asp-validation-for="userId" />
    </p>
    <p>
        <label asp-for="price">Цена</label><br />
        <input type="number" step="any" asp-for="price" />
    </p>
    <p>
        <label asp-for="date">Дата</label><br />
        <input type="date" asp-for="date" />
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>



<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>